{
  "info": {
    "name": "FADESP - Pagamentos API",
    "_postman_id": "fadesp-pagamentos-corrigido-001",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Collection alinhada com a controller"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080", "type": "string" },
    { "key": "page", "value": "0", "type": "string" },
    { "key": "size", "value": "10", "type": "string" },
    { "key": "novoStatus", "value": "PROCESSADO_COM_SUCESSO", "type": "string" },
    { "key": "pagamentoId", "value": "1", "type": "string" }
  ],
  "item": [
    {
      "name": "1) Criar pagamento",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "{{baseUrl}}/api/pagamentos", "host": ["{{baseUrl}}"], "path": ["api","pagamentos"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"codigoDebito\": 1005,\n  \"cpfCnpj\": \"12345678901\",\n  \"metodoPagamento\": \"PIX\",\n  \"numeroCartao\": null,\n  \"valor\": 180.00\n}"
        }
      }
    },
    {
      "name": "2) Buscar por ID",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/api/pagamentos/{{pagamentoId}}", "host": ["{{baseUrl}}"], "path": ["api","pagamentos","{{pagamentoId}}"] }
      }
    },
    {
      "name": "3) Listar (filtros + paginação)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/pagamentos?page={{page}}&size={{size}}&sort=id,desc",
          "host": ["{{baseUrl}}"],
          "path": ["api","pagamentos"],
          "query": [
            { "key": "page", "value": "{{page}}" },
            { "key": "size", "value": "{{size}}" },
            { "key": "sort", "value": "id,desc" },
            { "key": "codigoDebito", "value": "", "disabled": true },
            { "key": "cpfCnpjPagador", "value": "", "disabled": true },
            { "key": "status", "value": "", "disabled": true }
          ]
        },
        "description": "Preencha opcionalmente: codigoDebito, cpfCnpjPagador (apenas dígitos) e status."
      }
    },
    {
      "name": "4) Atualizar status (PATCH)",
      "request": {
        "method": "PATCH",
        "url": {
          "raw": "{{baseUrl}}/api/pagamentos/{{pagamentoId}}/status?novoStatus={{novoStatus}}",
          "host": ["{{baseUrl}}"],
          "path": ["api","pagamentos","{{pagamentoId}}","status"],
          "query": [{ "key": "novoStatus", "value": "{{novoStatus}}" }]
        }
      }
    },
    {
      "name": "5) Excluir logicamente (DELETE)",
      "request": {
        "method": "DELETE",
        "url": { "raw": "{{baseUrl}}/api/pagamentos/{{pagamentoId}}", "host": ["{{baseUrl}}"], "path": ["api","pagamentos","{{pagamentoId}}"] },
        "description": "Só permite quando status = PENDENTE (ativo=false)."
      }
    }
  ]
}
